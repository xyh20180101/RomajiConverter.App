<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:RomajiConverter.App.Controls"
             xmlns:app="clr-namespace:RomajiConverter.App"
             xmlns:models="clr-namespace:RomajiConverter.App.Models"
             xmlns:valueConverters="clr-namespace:RomajiConverter.App.ValueConverters"
             xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             mc:Ignorable="d"
             x:Class="RomajiConverter.App.Views.SettingsView"
             Loaded="Control_OnLoaded"
             Unloaded="Control_OnUnloaded">
	<UserControl.Resources>
		<valueConverters:HexStringToAvaloniaColorValueConverter x:Key="AvaloniaColorValueConverter"></valueConverters:HexStringToAvaloniaColorValueConverter>
		<valueConverters:DoubleToStringValueConverter x:Key="DoubleToStringValueConverter"></valueConverters:DoubleToStringValueConverter>
	</UserControl.Resources>
	<ItemsControl>
		<ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel Orientation="Vertical"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <TextBlock Margin="8,0,4,4" FontWeight="SemiBold" Text="生成图片选项" />

		<controls:SettingsCard Glyph="&#xE8D2;" Header="字体" Margin="4">
			<controls:SettingsCard.Content>
				<ComboBox x:Name="FontFamilyComboBox">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock x:DataType="FontFamily" FontFamily="{Binding}" Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE8D3;" Header="字体颜色" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<ColorPicker x:Name="FontColorPicker"
								  IsHexInputVisible="False"
								  IsAlphaEnabled="True"
								  Color="{Binding FontColor,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig,Converter={StaticResource AvaloniaColorValueConverter}}" />
					<TextBox x:Name="FontColorTextBox" Margin="4,0,0,0" TextWrapping="Wrap" MaxLength="9" Width="100"
							 Text="{Binding FontColor,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}"
							 LostFocus="FontColorTextBox_OnLostFocus" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE790;" Header="背景颜色" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<ColorPicker x:Name="BackgroundColorPicker"
								 IsHexInputVisible="True"
								 IsAlphaEnabled="False"
								 Color="{Binding BackgroundColor,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig,Converter={StaticResource AvaloniaColorValueConverter}}" />
					<TextBox x:Name="BackgroundColorTextBox" Margin="4,0,0,0" TextWrapping="Wrap" MaxLength="9" Width="100"
							 Text="{Binding BackgroundColor,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}"
							 LostFocus="BackgroundColorTextBox_OnLostFocus" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE8E9;" Header="字体大小" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<Slider x:Name="FontPixelSizeSlider" Margin="0,0,8,0" IsSnapToTickEnabled="True"
							TickFrequency="1" Minimum="20" Maximum="72" Width="100"
							Value="{Binding FontPixelSize,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" />
					<TextBox x:Name="FontPixelSizeTextBox" Text="{Binding Value,Mode=TwoWay,ElementName=FontPixelSizeSlider}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="3" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xF573;" Header="页面内边距" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<Slider x:Name="PagePaddingSlider" Margin="0,0,8,0" IsSnapToTickEnabled="True"
							TickFrequency="1" Minimum="0" Maximum="100" Width="100"
							Value="{Binding PagePadding,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" />
					<TextBox x:Name="PagePaddingTextBox" Text="{Binding Value,Mode=TwoWay,ElementName=PagePaddingSlider}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="3" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE799;" Header="字间距" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<Slider x:Name="TextMarginSlider" Margin="0,0,8,0" IsSnapToTickEnabled="True"
							TickFrequency="1" Minimum="0" Maximum="100" Width="100"
							Value="{Binding TextMargin,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" />
					<TextBox x:Name="TextMarginTextBox" Text="{Binding Value,Mode=TwoWay,ElementName=TextMarginSlider}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="3" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE799;" Header="词间距" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<Slider x:Name="WordMarginSlider" Margin="0,0,8,0" IsSnapToTickEnabled="True"
                            TickFrequency="0.1" Minimum="0" Maximum="1" Width="100"
                            Value="{Binding WordMargin,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" />
					<TextBox x:Name="WordMarginTextBox" Text="{Binding Value,Mode=TwoWay,ElementName=WordMarginSlider,Converter={StaticResource DoubleToStringValueConverter}}"
                             VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="3" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xEA37;" Header="行外边距" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<Slider x:Name="LineMarginSlider" Margin="0,0,8,0" IsSnapToTickEnabled="True"
							TickFrequency="1" Minimum="0" Maximum="100" Width="100"
							Value="{Binding LineMargin,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" />
					<TextBox x:Name="LineMarginTextBox" Text="{Binding Value,Mode=TwoWay,ElementName=LineMarginSlider}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="3" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xEA37;" Header="行内边距" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<Slider x:Name="LinePaddingSlider" Margin="0,0,8,0" IsSnapToTickEnabled="True"
							TickFrequency="1" Minimum="0" Maximum="100" Width="100"
							Value="{Binding LinePadding,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" />
					<TextBox x:Name="LinePaddingTextBox" Text="{Binding Value,Mode=TwoWay,ElementName=LinePaddingSlider}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="3" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard x:Name="IsOpenExplorerAfterSaveImageSettingsCard" Glyph="&#xE838;" Header="生成图片后打开文件夹" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<ToggleSwitch x:Name="IsOpenExplorerAfterSaveImageToggleSwitch"
								  IsChecked="{Binding IsOpenExplorerAfterSaveImage,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" >
					</ToggleSwitch>
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<TextBlock Margin="8,32,4,4" FontWeight="SemiBold" Text="生成文本选项" />

		<controls:SettingsCard Glyph="&#xE973;" Header="左括号符号" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<TextBox x:Name="LeftParenthesisTextBox" Text="{Binding LeftParenthesis,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="5" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE974;" Header="右括号符号" Margin="4">
			<controls:SettingsCard.Content>
				<StackPanel Orientation="Horizontal">
					<TextBox x:Name="RightParenthesisTextBox" Text="{Binding RightParenthesis,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}"
							 VerticalAlignment="Center" TextWrapping="Wrap" MaxLength="5" />
				</StackPanel>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

        <controls:SettingsCard Glyph="&#xE736;" Header="输出文本框只读" Margin="4">
            <controls:SettingsCard.Content>
                <StackPanel Orientation="Horizontal">
                    <ToggleSwitch x:Name="IsOutputTextBoxReadOnlyToggleSwitch"
                                  IsChecked="{Binding IsOutputTextBoxReadOnly,Mode=TwoWay,Source={x:Static app:App.Config},DataType=models:MyConfig}" >
                    </ToggleSwitch>
                </StackPanel>
            </controls:SettingsCard.Content>
        </controls:SettingsCard>

		<TextBlock Margin="8,32,4,4" FontWeight="SemiBold" Text="其他" />

		<controls:SettingsCard Glyph="&#xE72C;" Header="恢复默认设置" Margin="4">
			<controls:SettingsCard.Content>
				<Button x:Name="ResetButton" Content="恢复默认设置"
						Tapped="ResetButton_OnTapped" />
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

		<controls:SettingsCard Glyph="&#xE946;" Header="应用版本" Margin="4">
			<controls:SettingsCard.Content>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBlock Grid.Column="0" x:Name="VersionTextBlock" VerticalAlignment="Center" Margin="0,0,8,0"></TextBlock>
					<Button Grid.Column="1" x:Name="UpdateButton" Content="检查更新" Tapped="UpdateButton_OnTapped"/>
					<progRing:ProgressRing Grid.Column="1" x:Name="UpdateRing" IsActive="False" IsVisible="False" Width="20" Height="20" Foreground="{DynamicResource TextFillColorPrimary}"></progRing:ProgressRing>
				</Grid>
			</controls:SettingsCard.Content>
		</controls:SettingsCard>

        <controls:SettingsCard Glyph="&#xE946;" Header="Github" Margin="4" Tapped="InputElement_OnTapped">
			<controls:SettingsCard.Template>
				<ControlTemplate>
                    <Border Height="70" HorizontalAlignment="Stretch" CornerRadius="4" BorderThickness="1"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}">
                        <Grid>
                            <PathIcon HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"
                                      Data="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0"></PathIcon>
                            <TextBlock Text="{TemplateBinding Header}" Margin="58,0,0,0" HorizontalAlignment="Left"
                                       VerticalAlignment="Center" />
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="0,0,16,0"
                                              HorizontalAlignment="Right" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </controls:SettingsCard.Template>
            <controls:SettingsCard.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center">RomajiConverter.App</TextBlock>
                </Grid>
            </controls:SettingsCard.Content>
        </controls:SettingsCard>
	</ItemsControl>
</UserControl>
