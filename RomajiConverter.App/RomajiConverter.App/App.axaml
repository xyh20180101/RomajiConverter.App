<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:RomajiConverter.App"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             x:Class="RomajiConverter.App.App">
	<Application.Resources>
        <FontFamily x:Key="SegoeIconFont">avares://RomajiConverter.App/Assets/Fonts/#Segoe Fluent Icons</FontFamily>
	</Application.Resources>
	<Application.Styles>
		<!--MainView中有使用该处Styles[0]获取FluentAvaloniaTheme,不要改变顺序-->
        <styling:FluentAvaloniaTheme PreferUserAccentColor="True" PreferSystemTheme="True"/>
		<StyleInclude Source="avares://RomajiConverter.App/Controls/SettingsCard.axaml" />
		<StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
	</Application.Styles>
</Application>